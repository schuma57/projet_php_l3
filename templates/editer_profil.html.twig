{% extends 'index.html.twig' %}

{% block titre %} Editer son profil - {{ parent() }}{% endblock %}

{% set user = session.user_courant %}

{% block block_principal %}
    <div class="panel">
        <h2 class="text-center"> Edition profil {{ user.pseudo|capitalize }} </h2>
    </div>

    {% block block_erreur %} {{ parent() }} {% endblock %}
    <br/>

    <form id="form_modification" method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <label for="pseudo" class="col-xs-12 col-sm-2 control-label"> Pseudo : </label>
            <input id="pseudo" name="pseudo" type="text" class="col-xs-12 col-sm-6"
                   placeholder="Pseudo" value="{{ user.pseudo }}" disabled />
        </div>
        <div class="form-group">
            <label for="nom" class="col-xs-12 col-sm-2 control-label"> Nom : </label>
            <input id="nom" name="nom" type="text" class="col-xs-12 col-sm-6"
                   placeholder="Nom" value="{{ user.nom }}" />
        </div>
        <div class="form-group">
            <label for="prenom" class="col-xs-12 col-sm-2 control-label"> Prénom : </label>
            <input id="prenom" name="prenom" type="text" class="col-xs-12 col-sm-6"
                   placeholder="Prénom" value="{{ user.prenom }}" />
        </div>
        <div class="form-group">
            <label class="col-xs-12 col-sm-2 control-label"> Sexe : </label>
            <div class="col-xs-12 col-sm-6">
                <input name="sexe" type="radio" value="Homme"
                        {% if user.sexe == 'Homme' %}checked{% endif %}/> Homme
                <input name="sexe" type="radio" value="Femme"
                       {% if user.sexe == 'Femme' %}checked{% endif %}/> Femme
                <input name="sexe" type="radio" value="" /> Ne se prononce pas
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-xs-12 col-sm-2 control-label"> Adresse email : </label>
            <input id="email" name="email" type="text" class="col-xs-12 col-sm-6"
                   placeholder="Email" value="{{ user.email }}" />
        </div>
        <div class="form-group">
            <label for="naissance" class="col-xs-12 col-sm-2 control-label"> Date de naissance : </label>
            <input id="naissance" name="naissance" type="date" class="col-xs-12 col-sm-6"
                   placeholder="jj/mm/aaaa" value="{{ user.naissance }}" />
        </div>
        <div class="form-group">
            <label for="postal" class="col-xs-12 col-sm-2 control-label"> Adresse postal : </label>
            <input id="postal" name="postal" type="text" class="col-xs-12 col-sm-1"
                   placeholder="CP" value="{{ user.codePostal }}" />
            <input id="ville" name="ville" type="text" class="col-xs-12 col-sm-2"
                   placeholder="Ville" value="{{ user.ville }}" />
            <input id="adresse" name="adresse" type="text" class="col-xs-12 col-sm-3"
                   placeholder="Adresse" value="{{ user.adresse }}" />
        </div>
        <div class="form-group">
            <label for="telephone" class="col-xs-12 col-sm-2 control-label"> Téléphone : </label>
            <input id="telephone" name="telephone" type="tel" class="col-xs-12 col-sm-6"
                   placeholder="Téléphone" value="{{ user.telephone }}" />
        </div>
        <br/>
        <div class="form-group">
            <div class="col-md-offset-2 col-xs-offset-1">
                <button type="submit" name="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-ok-sign"></span> Enregister </button>
            </div>
        </div>
    </form> <!-- fin du formulaire -->

{% endblock %}

{% block block_scripts %}
    <script type="text/javascript" src="js/validationEdition.js"></script>
{% endblock %}